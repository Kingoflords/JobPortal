@model IEnumerable<JobPortal.Models.ApplicationUser>

@{
    ViewBag.Title = "Index";
}

<h2 class="pt-3 pb-3 pl-2">Users</h2>
<div class="table-responsive">
    <table class="table table-bordered table-striped table-hover">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CVPath)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Role)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>

            <th>Action</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @if (item.CVPath != null)
                    {
                        <a href="@item.CVPath" target="_blank">CV</a>
                    }

                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Role)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>

                <td>
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class="btn btn-sm btn-danger"})
                </td>
            </tr>
        }

    </table>
</div>